---
import BaseLayout from '../../layouts/BaseLayout.astro';

const breadcrumbItems = [
  { name: "Home", url: "/en/" },
  { name: "Contact", url: "/en/contact" }
];

const contact = {
  address: "120 Route des Macarons - 06560 Valbonne, France",
  phone: "06 82 26 73 42",
  phone2: "09 88 41 83 34",
  email: "absig2consulting@gmail.com",
};

const whatsappNumber = "33682267342";
---

<BaseLayout 
  title="Contact & Quote | ABSIG Consulting"
  description="Contact us for your European recruitment needs. Free quote and personalized support."
  currentPage="contact"
  currentLang="en"
  breadcrumbItems={breadcrumbItems}
>
  <!-- HERO -->
  <section class="hero-banner" style="min-height: 300px;">
    <div class="hero-image-container">
      <div class="hero-placeholder" style="background-image: url('/assets/img/customer-support.png'); background-size: cover; background-position: center; width: 100%; height: 100%;"></div>
      <div class="hero-overlay" style="background: rgba(0, 35, 102, 0.8);"></div>
    </div>
    <div class="hero-content">
      <h1 class="hero-title" data-aos="fade-up">Contact Us</h1>
      <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="100">We are here to help with your recruitment projects</p>
    </div>
  </section>

  <!-- CONTACT INFO -->
  <section style="padding: 4rem 0; background: #fff;">
    <div class="container">
      <div class="grid-2-cols-responsive align-center">
        
        <!-- Details -->
        <div data-aos="fade-right">
          <h2 style="color: #002366;">Our Contact Details</h2>
          <p class="lead" style="margin-bottom: 2rem;">
            Based in Valbonne Sophia-Antipolis, we handle recruitment across France.
          </p>
          
          <div style="margin-bottom: 1.5rem; display: flex; align-items: flex-start; gap: 1rem;">
            <span style="font-size: 1.5rem;">ğŸ“</span>
            <div>
              <strong>Address</strong>
              <p>{contact.address}</p>
            </div>
          </div>
          
          <div style="margin-bottom: 1.5rem; display: flex; align-items: flex-start; gap: 1rem;">
            <span style="font-size: 1.5rem;">ğŸ“</span>
            <div>
              <strong>Phone</strong>
              <p>
                <a href={`tel:${contact.phone.replace(/\s/g, '')}`} style="font-weight: 600; font-size: 1.1rem;">{contact.phone}</a><br>
                <a href={`tel:${contact.phone2.replace(/\s/g, '')}`}>{contact.phone2}</a>
              </p>
            </div>
          </div>
          
          <div style="margin-bottom: 1.5rem; display: flex; align-items: flex-start; gap: 1rem;">
            <span style="font-size: 1.5rem;">ğŸ“§</span>
            <div>
              <strong>Email</strong>
              <p><a href={`mailto:${contact.email}`}>{contact.email}</a></p>
            </div>
          </div>
          
          <div style="margin-top: 2rem; padding: 1.5rem; background: #f8f9fa; border-radius: 8px; border-left: 4px solid #d4af37;">
            <strong style="color: #002366;">Office Hours</strong>
            <p style="margin-top: 0.5rem;">
              Monday - Friday: 9:00 AM - 6:00 PM<br>
              Saturday: By appointment
            </p>
          </div>
        </div>

        <!-- Form -->
        <div data-aos="fade-left" style="background: #f8f9fa; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.05);">
          <h2 style="color: #002366; margin-bottom: 1.5rem;">Free Quote Request</h2>
          <form id="whatsappFormEn" style="display: flex; flex-direction: column; gap: 1rem;">
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
              <div>
                <label for="nameEn" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Full Name *</label>
                <input type="text" id="nameEn" name="nameEn" required style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 6px;">
              </div>
              <div>
                <label for="companyEn" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Company</label>
                <input type="text" id="companyEn" name="companyEn" style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 6px;">
              </div>
            </div>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
              <div>
                <label for="emailEn" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Email</label>
                <input type="email" id="emailEn" name="emailEn" style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 6px;">
              </div>
              <div>
                <label for="phoneEn" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Phone *</label>
                <input type="tel" id="phoneEn" name="phoneEn" required style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 6px;">
              </div>
            </div>
            
            <div>
              <label for="sectorEn" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Industry</label>
              <select id="sectorEn" name="sectorEn" style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 6px; background: white;">
                <option value="">-- Select --</option>
                <option value="Hospitality & Catering">Hospitality & Catering</option>
                <option value="Construction">Construction & Public Works</option>
                <option value="IT & Technology">IT & Technology</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <div>
              <label for="profileEn" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Position(s) needed</label>
              <input type="text" id="profileEn" name="profileEn" placeholder="Ex: 2 waiters, 1 chef..." style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 6px;">
            </div>
            
            <div>
              <label for="messageEn" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Additional details</label>
              <textarea id="messageEn" name="messageEn" rows="4" placeholder="Describe your recruitment needs..." style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 6px; resize: vertical;"></textarea>
            </div>
            
            <!-- GDPR Checkbox -->
            <div style="display: flex; align-items: flex-start; gap: 0.5rem; margin-top: 0.5rem;">
              <input type="checkbox" id="gdprConsent" name="gdprConsent" required style="margin-top: 4px; width: 18px; height: 18px; cursor: pointer;">
              <label for="gdprConsent" style="font-size: 0.8rem; color: #555; line-height: 1.4; cursor: pointer;">
                I agree that my data may be processed by ABSIG Consulting to respond to my request, in accordance with the <a href="/en/mentions-legales" style="color: #002366; text-decoration: underline;">privacy policy</a>. *
              </label>
            </div>
            
            <button type="submit" class="cta-button" style="width: 100%; margin-top: 1rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <line x1="22" y1="2" x2="11" y2="13"></line>
                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
              </svg>
              Send my request
            </button>

            <p style="font-size: 0.8rem; color: #666; text-align: center; margin-top: 0.5rem;">
              We respond within 24 business hours
            </p>
          </form>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>


---
import BaseLayout from '../../layouts/BaseLayout.astro';

const breadcrumbItems = [
  { name: "Home", url: "/en/" },
  { name: "Expertise", url: "/en/services" }
];
---

<BaseLayout 
  title="Expertise & Sectors | ABSIG Consulting"
  description="Discover our areas of intervention: Hospitality, Construction, IT. Recruitment of qualified European talents."
  currentPage="services"
  currentLang="en"
  breadcrumbItems={breadcrumbItems}
>
  <!-- HERO -->
  <section class="hero-banner" style="min-height: 350px;">
    <div class="hero-image-container">
      <div class="hero-placeholder" style="background-image: url('/assets/img/hero-professional.png'); background-size: cover; background-position: center; width: 100%; height: 100%;"></div>
      <div class="hero-overlay" style="background: rgba(0, 35, 102, 0.8);"></div>
    </div>
    <div class="hero-content">
      <h1 class="hero-title" data-aos="fade-up">Our Areas of Expertise</h1>
      <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="100">Tailored recruitment solutions for each sector</p>
    </div>
  </section>

  <!-- KEY FIGURES -->
  <section style="padding: 3rem 0; background: #f8fafc;">
    <div class="container">
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
        <div data-aos="fade-up" data-aos-delay="100">
          <div style="font-size: 2.5rem; font-weight: 800; color: #0d9488;">3</div>
          <div style="color: #64748b; font-size: 0.9rem; font-weight: 600;">Areas of Expertise</div>
        </div>
        <div data-aos="fade-up" data-aos-delay="200">
          <div style="font-size: 2.5rem; font-weight: 800; color: #0d9488;">100+</div>
          <div style="color: #64748b; font-size: 0.9rem; font-weight: 600;">Positions Filled</div>
        </div>
        <div data-aos="fade-up" data-aos-delay="300">
          <div style="font-size: 2.5rem; font-weight: 800; color: #0d9488;">10-15d</div>
          <div style="color: #64748b; font-size: 0.9rem; font-weight: 600;">Average Timeline</div>
        </div>
        <div data-aos="fade-up" data-aos-delay="400">
          <div style="font-size: 2.5rem; font-weight: 800; color: #0d9488;">96%</div>
          <div style="color: #64748b; font-size: 0.9rem; font-weight: 600;">Client Satisfaction</div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTOR DETAILS -->
  <section style="padding: 4rem 0; background: #fff;">
    <div class="container">
      
      <!-- HOSPITALITY -->
      <div class="service-block" data-aos="fade-up" style="margin-bottom: 5rem;">
        <div class="grid-2-cols-responsive align-center">
          <div>
            <h2 style="color: #d4af37;">üè® Hospitality & Catering</h2>
            <p class="lead">
              Facing labor shortages in the Horeca sector, we offer a reliable solution: 
              recruiting experienced and motivated European professionals.
            </p>
            <div style="margin-top: 1.5rem; display: flex; flex-direction: column; gap: 0.8rem;">
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;">Candidates pre-screened and <strong>validated by the SAAT‚Ñ¢ test</strong></span>
              </div>
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;"><strong>B1/B2 minimum</strong> French level guaranteed</span>
              </div>
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;"><strong>1-month</strong> replacement guarantee</span>
              </div>
            </div>
            <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; margin-top: 1.5rem;">
              <h3>Available Profiles:</h3>
              <ul style="column-count: 2; column-gap: 2rem; list-style-position: inside; margin-top: 1rem;">
                <li>Hotel Managers</li>
                <li>Receptionists</li>
                <li>Housekeepers</li>
                <li>Maids / Valets</li>
                <li>Chefs / Cooks</li>
                <li>Waiters / Bartenders</li>
              </ul>
            </div>
          </div>
          <div>
            <img src="/assets/img/flyer-hotellerie.jpg" alt="Hospitality Recruitment" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
          </div>
        </div>
      </div>

      <!-- CONSTRUCTION -->
      <div class="service-block" data-aos="fade-up" style="margin-bottom: 5rem;">
        <div class="grid-2-cols-responsive align-center reverse-mobile">
          <div>
            <img src="/assets/img/construction-manager.png" alt="Construction Recruitment" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
          </div>
          <div>
            <h2 style="color: #d4af37;">üöß Construction & Public Works</h2>
            <p class="lead">
              For your construction sites, we select qualified workers and technicians, ready to integrate quickly into your teams.
            </p>
            <div style="margin-top: 1.5rem; display: flex; flex-direction: column; gap: 0.8rem;">
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;">Workers with <strong>verified skill certificates</strong></span>
              </div>
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;">CACES, electrical certifications <strong>up to date</strong></span>
              </div>
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;"><strong>Fast deployment</strong> on site</span>
              </div>
            </div>
            <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; margin-top: 1.5rem;">
              <h3>Trades Covered:</h3>
              <ul style="column-count: 2; column-gap: 2rem; list-style-position: inside; margin-top: 1rem;">
                <li>Site Managers</li>
                <li>Machine Operators</li>
                <li>Masons / Formworkers</li>
                <li>Electricians</li>
                <li>Plumbers</li>
                <li>Truck Drivers</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- IT -->
      <div class="service-block" data-aos="fade-up">
        <div class="grid-2-cols-responsive align-center">
          <div>
            <h2 style="color: #d4af37;">üíª IT & New Tech</h2>
            <p class="lead">
              Access a pool of IT talents trained in the latest technologies to strengthen your technical teams.
            </p>
            <div style="margin-top: 1.5rem; display: flex; flex-direction: column; gap: 0.8rem;">
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;">Profiles with <strong>verified portfolio and references</strong></span>
              </div>
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;">Technical tests <strong>before presentation</strong></span>
              </div>
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span style="color: #22c55e; font-weight: bold; font-size: 1.1rem;">‚úì</span>
                <span style="color: #475569;">Behavioral assessment via <strong>SAAT‚Ñ¢ test</strong></span>
              </div>
            </div>
            <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; margin-top: 1.5rem;">
              <h3>Technical Skills:</h3>
              <ul style="column-count: 2; column-gap: 2rem; list-style-position: inside; margin-top: 1rem;">
                <li>Full-Stack Developers</li>
                <li>Front/Back-End Devs</li>
                <li>DevOps & Cloud</li>
                <li>System Admins</li>
                <li>Cybersecurity</li>
                <li>IT Project Managers</li>
              </ul>
            </div>
          </div>
          <div>
            <img src="/assets/img/it-specialist.png" alt="IT Recruitment" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- SAAT TEST PROMO -->
  <section style="padding: 4rem 0; background: linear-gradient(135deg, #0a1628, #1e3a5f);">
    <div class="container">
      <div style="display: flex; align-items: center; gap: 3rem; flex-wrap: wrap;" data-aos="fade-up">
        <div style="flex: 1; min-width: 280px;">
          <div style="display: inline-block; background: rgba(212,175,55,0.15); border: 1px solid rgba(212,175,55,0.4); color: #d4af37; padding: 0.4rem 1.2rem; border-radius: 50px; font-size: 0.75rem; font-weight: 700; letter-spacing: 0.12em; text-transform: uppercase; margin-bottom: 1rem;">
            üß† EXCLUSIVE TOOL
          </div>
          <h2 style="color: white; font-size: 1.8rem; margin-bottom: 1rem;">Evaluate your candidates with the <span style="color: #d4af37;">SAAT‚Ñ¢ test</span></h2>
          <p style="color: rgba(255,255,255,0.8); line-height: 1.7; margin-bottom: 1.5rem;">
            Each candidate can take our assessment test covering <strong style="color: white;">13 dimensions</strong>. 
            Personality, communication, action ‚Äî identify the right profile before the interview.
          </p>
          <a href="/en/test-saat" style="display: inline-flex; align-items: center; gap: 0.5rem; background: linear-gradient(135deg, #d4af37, #c9a030); color: #0a1628; padding: 0.9rem 2rem; border-radius: 50px; font-weight: 700; text-decoration: none; transition: all 0.3s ease;"
             onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 8px 25px rgba(212,175,55,0.4)'"
             onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">
            Discover the SAAT‚Ñ¢ test ‚Üí
          </a>
        </div>
        <div style="flex: 0 0 auto; display: flex; gap: 1.5rem; flex-wrap: wrap;">
          <div style="background: rgba(255,255,255,0.08); padding: 1.5rem; border-radius: 16px; text-align: center; border: 1px solid rgba(255,255,255,0.1); min-width: 120px;">
            <div style="font-size: 2rem; font-weight: 800; color: #d4af37;">87</div>
            <div style="color: rgba(255,255,255,0.6); font-size: 0.8rem; font-weight: 600;">Questions</div>
          </div>
          <div style="background: rgba(255,255,255,0.08); padding: 1.5rem; border-radius: 16px; text-align: center; border: 1px solid rgba(255,255,255,0.1); min-width: 120px;">
            <div style="font-size: 2rem; font-weight: 800; color: #d4af37;">15</div>
            <div style="color: rgba(255,255,255,0.6); font-size: 0.8rem; font-weight: 600;">Minutes</div>
          </div>
          <div style="background: rgba(255,255,255,0.08); padding: 1.5rem; border-radius: 16px; text-align: center; border: 1px solid rgba(255,255,255,0.1); min-width: 120px;">
            <div style="font-size: 2rem; font-weight: 800; color: #d4af37;">13</div>
            <div style="color: rgba(255,255,255,0.6); font-size: 0.8rem; font-weight: 600;">Dimensions</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section style="padding: 4rem 0; background: linear-gradient(135deg, #1e3a5f, #0d9488); text-align: center;">
    <div class="container">
      <h2 data-aos="fade-up" style="color: white;">A specific need?</h2>
      <p data-aos="fade-up" data-aos-delay="100" style="margin-bottom: 2rem; color: rgba(255,255,255,0.9); max-width: 600px; margin-left: auto; margin-right: auto;">
        Contact us for a free assessment of your recruitment needs. Response within 24 hours.
      </p>
      <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;" data-aos="fade-up" data-aos-delay="200">
        <a href="/en/contact" class="cta-button" style="background: white; color: #1e3a5f;">Request a Free Quote</a>
        <a href="tel:0682267342" class="cta-button" style="background: transparent; color: white; border: 2px solid rgba(255,255,255,0.4);">üìû Call Now</a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .service-block ul li { margin-bottom: 0.5rem; position: relative; padding-left: 1.5rem; }
  .service-block ul li::before { content: "‚úì"; color: #d4af37; position: absolute; left: 0; font-weight: bold; }
  @media (max-width: 768px) {
    .grid-2-cols-responsive.reverse-mobile { display: flex; flex-direction: column-reverse; }
    .service-block ul { column-count: 1 !important; }
  }
</style>

---
import BaseLayout from '../../layouts/BaseLayout.astro';

const breadcrumbItems = [
  { name: "Home", url: "/en/" },
  { name: "Expertise", url: "/en/services" }
];
---

<BaseLayout 
  title="Expertise & Sectors | ABSIG Consulting"
  description="Discover our areas of intervention: Hospitality, Construction, IT. Recruitment of qualified European talents."
  currentPage="services"
  currentLang="en"
  breadcrumbItems={breadcrumbItems}
>
  <!-- HERO -->
  <section class="hero-banner" style="min-height: 350px;">
    <div class="hero-image-container">
      <div class="hero-placeholder" style="background-image: url('/assets/img/hero-professional.png'); background-size: cover; background-position: center; width: 100%; height: 100%;"></div>
      <div class="hero-overlay" style="background: rgba(0, 35, 102, 0.8);"></div>
    </div>
    <div class="hero-content">
      <h1 class="hero-title" data-aos="fade-up">Our Areas of Expertise</h1>
      <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="100">Tailored recruitment solutions for each sector</p>
    </div>
  </section>

  <!-- SECTOR DETAILS -->
  <section style="padding: 4rem 0; background: #fff;">
    <div class="container">
      
      <!-- HOSPITALITY -->
      <div class="service-block" data-aos="fade-up" style="margin-bottom: 5rem;">
        <div class="grid-2-cols-responsive align-center">
          <div>
            <h2 style="color: #d4af37;">üè® Hospitality & Catering</h2>
            <p class="lead">
              Facing labor shortages in the Horeca sector, we offer a reliable solution: 
              recruiting experienced and motivated European professionals.
            </p>
            <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; margin-top: 1.5rem;">
              <h3>Available Profiles:</h3>
              <ul style="column-count: 2; column-gap: 2rem; list-style-position: inside; margin-top: 1rem;">
                <li>Hotel Managers</li>
                <li>Receptionists</li>
                <li>Housekeepers</li>
                <li>Maids / Valets</li>
                <li>Chefs / Cooks</li>
                <li>Waiters / Bartenders</li>
              </ul>
            </div>
          </div>
          <div>
            <img src="/assets/img/flyer-hotellerie.jpg" alt="Hospitality Recruitment" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
          </div>
        </div>
      </div>

      <!-- CONSTRUCTION -->
      <div class="service-block" data-aos="fade-up" style="margin-bottom: 5rem;">
        <div class="grid-2-cols-responsive align-center reverse-mobile">
          <div>
            <img src="/assets/img/construction-manager.png" alt="Construction Recruitment" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
          </div>
          <div>
            <h2 style="color: #d4af37;">üöß Construction & Public Works</h2>
            <p class="lead">
              For your construction sites, we select qualified workers and technicians, ready to integrate quickly into your teams.
            </p>
            <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; margin-top: 1.5rem;">
              <h3>Trades Covered:</h3>
              <ul style="column-count: 2; column-gap: 2rem; list-style-position: inside; margin-top: 1rem;">
                <li>Site Managers</li>
                <li>Machine Operators</li>
                <li>Masons / Formworkers</li>
                <li>Electricians</li>
                <li>Plumbers</li>
                <li>Truck Drivers</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- IT -->
      <div class="service-block" data-aos="fade-up">
        <div class="grid-2-cols-responsive align-center">
          <div>
            <h2 style="color: #d4af37;">üíª IT & New Tech</h2>
            <p class="lead">
              Access a pool of IT talents trained in the latest technologies to strengthen your technical teams.
            </p>
            <div style="background: #f9f9f9; padding: 2rem; border-radius: 8px; margin-top: 1.5rem;">
              <h3>Technical Skills:</h3>
              <ul style="column-count: 2; column-gap: 2rem; list-style-position: inside; margin-top: 1rem;">
                <li>Full-Stack Developers</li>
                <li>Front/Back-End Devs</li>
                <li>DevOps & Cloud</li>
                <li>System Admins</li>
                <li>Cybersecurity</li>
                <li>IT Project Managers</li>
              </ul>
            </div>
          </div>
          <div>
            <img src="/assets/img/it-specialist.png" alt="IT Recruitment" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- CTA -->
  <section style="padding: 4rem 0; background: #f9f9f9; text-align: center;">
    <div class="container">
      <h2 data-aos="fade-up">A specific need?</h2>
      <p data-aos="fade-up" data-aos-delay="100" style="margin-bottom: 2rem;">
        Contact us for a free assessment of your recruitment needs.
      </p>
      <a href="/en/contact" class="cta-button" data-aos="fade-up" data-aos-delay="200">Request a Quote</a>
    </div>
  </section>

</BaseLayout>

<style>
  .service-block ul li { margin-bottom: 0.5rem; position: relative; padding-left: 1.5rem; }
  .service-block ul li::before { content: "‚úì"; color: #d4af37; position: absolute; left: 0; font-weight: bold; }
  @media (max-width: 768px) {
    .grid-2-cols-responsive.reverse-mobile { display: flex; flex-direction: column-reverse; }
    .service-block ul { column-count: 1 !important; }
  }
</style>

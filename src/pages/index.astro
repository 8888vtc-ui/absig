---
import BaseLayout from '../layouts/BaseLayout.astro';
import Gallery from '../components/Gallery.astro';
import BookingWidget from '../components/BookingWidget.astro';
import Reviews from '../components/Reviews.astro';
---

<BaseLayout
  title="Galriviera - Chauffeur privé VTC premium sur la Côte d'Azur"
  description="Transferts aéroport Nice, Monaco, Cannes, Saint-Tropez. Circuits privés, conciergerie casher, chauffeurs francophones/anglophones/hébraïsants. Service 24/7, flotte Mercedes haut de gamme."
  currentLang="fr"
>
  <!-- Hero Section -->
  <section class="hero-banner" style="min-height: 80vh;">
    <div class="hero-image-container">
      <div class="hero-overlay" style="background: linear-gradient(to bottom, rgba(0, 35, 102, 0.7), rgba(0, 35, 102, 0.5));"></div>
      <img src="/assets/img/hero/hero-riviera.webp" alt="French Riviera Luxury" class="hero-background-image" style="object-fit: cover; width: 100%; height: 100%;" onerror="this.src='https://images.unsplash.com/photo-1533105079780-92b9be482077?q=80&w=1920&auto=format&fit=crop'"/>
    </div>
    <div class="hero-content" data-aos="fade-up" data-aos-duration="1000">
      <h1 class="hero-title" style="font-family: 'Rubik', sans-serif; letter-spacing: 1px;">BIENVENUE SUR LA CÔTE D'AZUR</h1>
      <p class="hero-subtitle" style="font-family: 'Rubik', sans-serif;">Transport privé haut de gamme</p>
      <a href="https://wa.me/33682267342" class="hero-cta-button" style="background: #d4af37; color: #002366;">RÉSERVER VOTRE CHAUFFEUR</a>
    </div>
  </section>

  <!-- Booking Widget -->
  <div class="container relative z-20">
    <BookingWidget currentLang="en" />
  </div>

  <!-- Intro Section -->
  <section class="section-image-text">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <h2 style="color: #002366; font-family: 'Rubik', sans-serif;">La Côte d'Azur, taillée pour vous</h2>
          <p class="text-lg mb-6">
            Vivez la Côte d'Azur avec Galriviera. Nous accompagnons vos déplacements avec un service premium : transferts <strong>aéroport de Nice</strong>, visites privées de <strong>Monaco et Cannes</strong>, conciergerie casher, chauffeurs parlant français, anglais et hébreu.
          </p>
          <ul class="star-bullets space-y-4 mb-8">
            <li class="flex items-center gap-3">
              <span>Accueil VIP aéroport & Fast-Track sécurité (sur demande)</span>
            </li>
            <li class="flex items-center gap-3">
              <span>Options casher et respect du Shabbat</span>
            </li>
            <li class="flex items-center gap-3">
              <span>Support en français / anglais / hébreu</span>
            </li>
            <li class="flex items-center gap-3">
              <span>Flotte Mercedes haut de gamme (Classe S, V)</span>
            </li>
          </ul>
          <a href="https://wa.me/33682267342" class="btn">DÉCOUVRIR NOS SERVICES</a>
        </div>
        <div class="relative" data-aos="fade-left">
          <img src="/assets/img/gallery/galriviera-luxury-1.webp" alt="Luxury Mercedes VTC" class="rounded-xl shadow-2xl" onerror="this.src='https://images.unsplash.com/photo-1563720223185-11003d516935?q=80&w=1000&auto=format&fit=crop'"/>
          <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-lg shadow-xl border-l-4 border-gold hidden md:block" data-aos="zoom-in" data-aos-delay="300">
            <p class="text-blue-900 font-bold text-xl">Support 24/7</p>
            <p class="text-gray-600">+33 6 82 26 73 42</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider-star">
    <svg viewBox="0 0 24 24"><path d="M12 2L15 9L22 9L17 14L19 21L12 17L5 21L7 14L2 9L9 9Z" /></svg>
  </div>

  <!-- Services Grid -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12" style="color: #002366; font-family: 'Rubik', sans-serif;" data-aos="fade-up">NOS SERVICES PREMIUM</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="category-card" data-aos="fade-up" data-aos-delay="100">
          <div class="card-image-wrapper">
            <img src="/assets/img/gallery/galriviera-luxury-4.webp" alt="Monaco Tour" class="card-image" onerror="this.src='https://images.unsplash.com/photo-1516483638261-f4dbaf036963?q=80&w=800&auto=format&fit=crop'"/>
          </div>
          <div class="card-content">
            <h3 class="card-title">Monaco & Monte-Carlo</h3>
            <p class="card-description">Excursions privées : Casino, Palais, shopping de luxe, sorties business.</p>
            <a href="/vtc-nice-monaco-monte-carlo" class="card-link">Découvrir Monaco →</a>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="category-card" data-aos="fade-up" data-aos-delay="200">
          <div class="card-image-wrapper">
            <img src="/assets/img/gallery/galriviera-luxury-6.webp" alt="Cannes Croisette" class="card-image" onerror="this.src='https://images.unsplash.com/photo-1524312672933-60f3b9991b80?q=80&w=800&auto=format&fit=crop'"/>
          </div>
          <div class="card-content">
            <h3 class="card-title">Cannes & Saint-Tropez</h3>
            <p class="card-description">Montées des Marches, Croisette, plages de Pampelonne. Transferts élégants en Classe V.</p>
            <a href="/vtc-nice-cannes-festival" class="card-link">Visiter Cannes →</a>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="category-card" data-aos="fade-up" data-aos-delay="300">
          <div class="card-image-wrapper">
            <img src="/assets/img/hero/synagogue-nice.jpg" alt="Special Tour" class="card-image" onerror="this.src='https://images.unsplash.com/photo-1576670159805-381a9ee1e3c9?q=80&w=800&auto=format&fit=crop'"/>
          </div>
          <div class="card-content">
            <h3 class="card-title">Patrimoine & Casher</h3>
            <p class="card-description">Grande Synagogue de Nice, meilleures adresses casher, circuit culturel personnalisé.</p>
            <a href="/excursion-tourisme-juif-nice" class="card-link">En savoir plus →</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <Gallery />

  <!-- Reviews Section -->
  <Reviews currentLang="fr" />

  <!-- CTA Section -->
  <section class="py-20 text-white text-center relative overflow-hidden">
    <div class="absolute inset-0 z-0" style="background: #002366;"></div>
    <div class="container relative z-10" data-aos="zoom-in">
      <h2 class="text-3xl font-bold mb-6" style="font-family: 'Rubik', sans-serif;">Prêt pour votre expérience Côte d'Azur ?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">Réservez votre chauffeur privé et profitez d'un trajet fluide, sûr et luxueux.</p>
      <div class="flex justify-center gap-4 flex-wrap">
        <a href="https://wa.me/33682267342" class="btn" style="background: #25D366; color: white;">WhatsApp</a>
        <a href="/contact" class="btn">Réserver en ligne</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .text-gold { color: #d4af37; }
  .border-gold { border-color: #d4af37; }
  .bg-gray-50 { background-color: #f9fafb; }
  .grid { display: grid; }
  .grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
  .gap-12 { gap: 3rem; }
  .gap-8 { gap: 2rem; }
  .gap-4 { gap: 1rem; }
  .items-center { align-items: center; }
  .mb-6 { margin-bottom: 1.5rem; }
  .mb-8 { margin-bottom: 2rem; }
  .mb-12 { margin-bottom: 3rem; }
  .py-20 { padding-top: 5rem; padding-bottom: 5rem; }
  .text-center { text-align: center; }
  .text-3xl { font-size: 1.875rem; line-height: 2.25rem; }
  .text-4xl { font-size: 2.25rem; line-height: 2.5rem; }
  .text-xl { font-size: 1.25rem; line-height: 1.75rem; }
  .font-bold { font-weight: 700; }
  .rounded-xl { border-radius: 0.75rem; }
  .shadow-2xl { box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); }
  .shadow-xl { box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); }
  .relative { position: relative; }
  .absolute { position: absolute; }
  .inset-0 { top: 0; right: 0; bottom: 0; left: 0; }
  .z-0 { z-index: 0; }
  .z-10 { z-index: 10; }
  .z-20 { z-index: 20; }
  .flex { display: flex; }
  .justify-center { justify-content: center; }
  .mx-auto { margin-left: auto; margin-right: auto; }
  .max-w-2xl { max-width: 42rem; }
  
  @media (min-width: 768px) {
    .md\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
    .md\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
    .md\:block { display: block; }
  }
</style>



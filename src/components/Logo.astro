---
const logoText = "ABSIG CONSULTING";
---

<a href="/" class="logo-link" aria-label="Accueil ABSIG Consulting">
  <span class="logo-text-display">ABSIG<span class="logo-highlight">CONSULTING</span></span>
</a>

<style>
  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
  }
  
  .logo-text-display {
    font-size: 1.5rem;
    font-weight: 800;
    color: #ffffff;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .logo-highlight {
    color: #d4af37;
    margin-left: 5px;
    font-weight: 300;
  }
  
  @media (max-width: 768px) {
    .logo-text-display {
      font-size: 1.2rem;
    }
  }
</style>

import Logo from './Logo.astro';

interface Props {
  currentPage?: string;
  currentLang?: string;
}

const { currentPage = "", currentLang = "fr" } = Astro.props;

// Menu spÃ©cifique ABSIG (FR)
const navItemsFr = [
  { label: "Accueil", href: "/", id: "index" },
  { label: "Nos Expertises", href: "/services", id: "services" },
  { label: "Test SAATâ„¢", href: "/test-saat", id: "test-saat" },
  { label: "Ã€ Propos", href: "/a-propos", id: "a-propos" },
  { label: "Contact", href: "/contact", id: "contact" }
];

// Menu spÃ©cifique ABSIG (EN)

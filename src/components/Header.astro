  { label: "Home", href: "/en/", id: "index" },
  { label: "Expertise", href: "/en/services", id: "services" },
  { label: "SAATâ„¢ Test", href: "/en/test-saat", id: "test-saat" },
  { label: "About Us", href: "/en/about", id: "a-propos" },
  { label: "Contact", href: "/en/contact", id: "contact" }
];

const navItems = currentLang === 'en' ? navItemsEn : navItemsFr;
const whatsappNumber = "33682267342";

// Language Switcher Logic
const switchLangUrl = currentLang === 'fr' ? `/en${Astro.url.pathname === '/' ? '/' : Astro.url.pathname}` : Astro.url.pathname.replace('/en', '') || '/';
const switchLangLabel = currentLang === 'fr' ? 'ðŸ‡¬ðŸ‡§ EN' : 'ðŸ‡«ðŸ‡· FR';

---

<!-- HEADER -->
<header class="site-header">
  <div class="container navbar">
    <div class="nav-brand">
      <Logo />
    </div>
    
    <!-- Menu Desktop -->
    <nav class="nav-links-desktop" aria-label="Navigation principale">
      {navItems.map(item => (
        <a href={item.href} class={currentPage === item.id ? "active" : ""}>{item.label}</a>
      ))}
      <a href={switchLangUrl} class="lang-switch" style="margin-left: 10px; font-weight: bold;">{switchLangLabel}</a>
      <a href={`https://wa.me/${whatsappNumber}`} class="header-cta" target="_blank">{currentLang === 'en' ? 'Get a Quote' : 'Devis Gratuit'}</a>
    </nav>
  </div>
</header>


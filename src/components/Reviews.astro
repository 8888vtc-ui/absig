---
import { featuredReviews } from '../data/reviews';
---

<section class="reviews-section" id="reviews">
  <div class="container">
    <h2 class="reviews-title">Témoignage Client</h2>
    
    <div class="reviews-content">
      {featuredReviews.map((review) => (
        <div class="review-card">
          <div class="review-stars">
            {[...Array(review.rating)].map(() => (
              <span class="star">★</span>
            ))}
          </div>
          <blockquote class="review-text">"{review.reviewBody}"</blockquote>
          <cite class="review-author">— {review.author}</cite>
        </div>
      ))}
    </div>
    
    <div class="reviews-link">
      <a href="https://www.facebook.com/profile.php?id=61579363291995&sk=reviews" target="_blank" rel="noopener noreferrer">
        Voir tous les avis sur Facebook →
      </a>
    </div>
  </div>
</section>

<style>
  .reviews-section {
    padding: 3rem 0;
    background: #f9fafb;
  }
  
  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .reviews-title {
    text-align: center;
    color: #002366;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }
  
  .review-card {
    background: #ffffff;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    text-align: center;
  }
  
  .review-stars {
    margin-bottom: 0.75rem;
  }
  
  .star {
    color: #d4af37;
    font-size: 1rem;
    margin: 0 1px;
  }
  
  .review-text {
    color: #4a5568;
    font-size: 1rem;
    font-style: italic;
    line-height: 1.5;
    margin: 0 0 0.75rem 0;
  }
  
  .review-author {
    color: #002366;
    font-weight: 600;
    font-size: 0.9rem;
    font-style: normal;
  }
  
  .reviews-link {
    text-align: center;
    margin-top: 1.5rem;
  }
  
  .reviews-link a {
    color: #002366;
    font-weight: 600;
    text-decoration: none;
    font-size: 0.9rem;
  }
  
  .reviews-link a:hover {
    color: #d4af37;
    text-decoration: underline;
  }
</style>

---
interface Props {
  currentLang?: string;
}

const { currentLang = 'en' } = Astro.props;

const t = {
  en: {
    title: "Instant Quote & Booking",
    pickup: "Pick-up Location",
    dropoff: "Drop-off Location",
    date: "Date",
    time: "Time",
    vehicle: "Vehicle Type",
    passengers: "Passengers",
    bookBtn: "Get Price on WhatsApp",
    locations: {
      nice_airport: "Nice Airport (NCE)",
      nice_city: "Nice City Center",
      cannes: "Cannes",
      monaco: "Monaco / Monte-Carlo",
      antibes: "Antibes / Juan-les-Pins",
      st_tropez: "Saint-Tropez",
      other: "Other (Specify in msg)"
    },
    vehicles: {
      sedan: "Luxury Sedan (Mercedes E-Class)",
      van: "Luxury Van (Mercedes V-Class)",
      limo: "First Class (Mercedes S-Class)"
    }
  },
  fr: {
    title: "Devis & R茅servation Express",
    pickup: "Lieu de prise en charge",
    dropoff: "Destination",
    date: "Date",
    time: "Heure",
    vehicle: "Type de v茅hicule",
    passengers: "Passagers",
    bookBtn: "Voir le prix sur WhatsApp",
    locations: {
      nice_airport: "A茅roport de Nice (NCE)",
      nice_city: "Nice Centre",
      cannes: "Cannes",
      monaco: "Monaco / Monte-Carlo",
      antibes: "Antibes / Juan-les-Pins",
      st_tropez: "Saint-Tropez",
      other: "Autre (Pr茅ciser)"
    },
    vehicles: {
      sedan: "Berline Luxe (Mercedes Classe E)",
      van: "Van Luxe (Mercedes Classe V)",
      limo: "Premi猫re Classe (Mercedes Classe S)"
    }
  },
  he: {
    title: "爪注转 专  转",
    pickup: "拽 住祝",
    dropoff: "注",
    date: "转专",
    time: "砖注",
    vehicle: "住 专",
    passengers: "住注",
    bookBtn: "拽 专 -WhatsApp",
    locations: {
      nice_airport: "砖 转注驻 住 (NCE)",
      nice_city: "专 注专 住",
      cannes: "拽",
      monaco: "拽 /  拽专",
      antibes: " / '--驻",
      st_tropez: "住 专驻",
      other: "专 (爪 注)"
    },
    vehicles: {
      sedan: "住 拽专转 (专爪住 E-Class)",
      van: " 拽专转 (专爪住 V-Class)",
      limo: "拽 专砖 (专爪住 S-Class)"
    }
  }
};

const lang = t[currentLang] || t.en;
const isRtl = currentLang === 'he';
---

<div class="booking-widget" data-aos="fade-up" dir={isRtl ? 'rtl' : 'ltr'}>
  <div class="booking-header">
    <h3>{lang.title}</h3>
  </div>
  <form id="booking-form" class="booking-form">
    <div class="form-grid">
      <div class="form-group">
        <label for="pickup">{lang.pickup}</label>
        <select id="pickup" required>
          <option value="Nice Airport (NCE)">{lang.locations.nice_airport}</option>
          <option value="Nice City">{lang.locations.nice_city}</option>
          <option value="Cannes">{lang.locations.cannes}</option>
          <option value="Monaco">{lang.locations.monaco}</option>
          <option value="Antibes">{lang.locations.antibes}</option>
          <option value="Saint-Tropez">{lang.locations.st_tropez}</option>
          <option value="Other">{lang.locations.other}</option>
        </select>
      </div>
      
      <div class="form-group">
        <label for="dropoff">{lang.dropoff}</label>
        <select id="dropoff" required>
          <option value="Cannes">{lang.locations.cannes}</option>
          <option value="Nice Airport (NCE)">{lang.locations.nice_airport}</option>
          <option value="Nice City">{lang.locations.nice_city}</option>
          <option value="Monaco">{lang.locations.monaco}</option>
          <option value="Antibes">{lang.locations.antibes}</option>
          <option value="Saint-Tropez">{lang.locations.st_tropez}</option>
          <option value="Other">{lang.locations.other}</option>
        </select>
      </div>

      <div class="form-group">
        <label for="date">{lang.date}</label>
        <input type="date" id="date" required />
      </div>

      <div class="form-group">
        <label for="time">{lang.time}</label>
        <input type="time" id="time" required />
      </div>

      <div class="form-group">
        <label for="vehicle">{lang.vehicle}</label>
        <select id="vehicle">
          <option value="Sedan">{lang.vehicles.sedan}</option>
          <option value="Van">{lang.vehicles.van}</option>
          <option value="S-Class">{lang.vehicles.limo}</option>
        </select>
      </div>

      <div class="form-group">
        <label for="passengers">{lang.passengers}</label>
        <select id="passengers">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8+">8+</option>
        </select>
      </div>
    </div>
    
    <button type="submit" class="submit-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
      {lang.bookBtn}
    </button>
  </form>
</div>

<style>
  .booking-widget {
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    padding: 2rem;
    max-width: 1000px;
    margin: -80px auto 0; /* Overlap hero */
    position: relative;
    z-index: 20;
    border: 1px solid rgba(212, 175, 55, 0.2);
  }

  .booking-header h3 {
    color: #002366;
    margin-bottom: 1.5rem;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #4a5568;
  }

  select, input {
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-size: 1rem;
    background-color: #f8fafc;
    transition: all 0.3s;
  }

  select:focus, input:focus {
    outline: none;
    border-color: #d4af37;
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }

  .submit-btn {
    width: 100%;
    background: #25D366;
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s;
  }

  .submit-btn:hover {
    background: #128c7e;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .booking-widget {
      margin: 1.5rem 1rem 2rem;
      padding: 1.25rem;
      border-radius: 10px;
    }
    
    .booking-header h3 {
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }
    
    .form-grid {
      gap: 1rem;
      margin-bottom: 1.5rem;
    }
    
    select, input {
      padding: 0.875rem;
      font-size: 16px; /* Prevents iOS zoom */
    }
    
    .submit-btn {
      padding: 0.875rem;
      font-size: 1rem;
    }
  }
</style>

<script is:inline>
  document.getElementById('booking-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const pickup = document.getElementById('pickup').value;
    const dropoff = document.getElementById('dropoff').value;
    const date = document.getElementById('date').value;
    const time = document.getElementById('time').value;
    const vehicle = document.getElementById('vehicle').value;
    const passengers = document.getElementById('passengers').value;

    const message = `Bonjour Galriviera, I would like a quote for:\n\n *Route*: ${pickup} ★ ${dropoff}\n *Date*: ${date} at ${time}\n *Vehicle*: ${vehicle}\n *Passengers*: ${passengers}\n\nThank you!`;
    
    const whatsappUrl = `https://wa.me/33682267342?text=${encodeURIComponent(message)}`;
    window.open(whatsappUrl, '_blank');
  });
</script>
